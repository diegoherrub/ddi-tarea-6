<resources>
    <!-- Base style -->
    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Primary Text -->
    <style name="TextStyle.Primary" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <!-- Secondary Text -->
    <style name="TextStyle.Secondary" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/md_theme_onSecondaryContainer</item>
    </style>
</resources>
