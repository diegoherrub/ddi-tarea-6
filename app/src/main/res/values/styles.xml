<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Toolbar -->
    <style name="style_buttons_toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="iconSize">30sp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Popup Menu -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:divider">@drawable/popup_menu_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Text View Hour -->
    <style name="text_view_hour">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/txt_hour</item>
        <item name="android:textColor">@color/md_theme_tertiary</item>
    </style>

    <!-- Text View Description -->
    <style name="text_view_description">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/md_theme_outline</item>
    </style>

    <style name="bottom_navigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/EmptyActiveIndicatorStyle</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color_selector</item>
    </style>
    
    <!-- Estilo vacÃ­o para el indicador activo -->
    <style name="EmptyActiveIndicatorStyle">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:height">0dp</item>
    </style>
</resources>
